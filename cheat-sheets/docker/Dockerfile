# название образа из которого будет создан контейнер
FROM gcc

# откуда брать файлы и куда их копировать
COPY . /gcc

# указывается рабочая директория
WORKDIR /gcc

# выполняется один раз при запуске образа
RUN gcc -g3 -O0 file.c

# выполняется каждый раз при запуске контейнера
CMD ["./a.out"]

# $ docker build .
# $ docker run <ID>
